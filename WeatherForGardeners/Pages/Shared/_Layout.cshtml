<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeatherForGardeners</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WeatherForGardeners.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">WeatherForGardeners</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="content-wrapper">
            <!-- Основной контент -->
            <main role="main" class="main-content">
                @RenderBody()
            </main>

            <!-- Боковая панель -->
            <aside class="sidebar" id="sidebar">
                <button id="toggleSidebar">Новости</button>
                @await Html.PartialAsync("_Sidebar")
            </aside>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WeatherForGardeners - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <style>
        .container-fluid {
            max-width: 100%;
            padding: 0;
            margin: 0;
        }

        .content-wrapper {
            display: flex;
            width: 100%;
            transition: all 0.3s ease;
            position: relative;
        }

        .main-content {
            width: 80%; /* Основная ширина, уменьшена для новой боковой панели */
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-sizing: border-box;
            overflow-x: auto;
            transition: all 0.3s ease;
        }

        .sidebar {
            width: 20%; /* Изначально занимает 15% */
            background-color: rgba(144, 238, 144, 0.3);
            padding: 20px;
            border-left: 1px solid #ccc;
            border-radius: 8px;
            box-sizing: border-box;
            transition: all 0.3s ease;
            position: absolute;
            right: 0;
            top: 0;
            height: 100%;
            z-index: 1;
        }

            /* Расширенная боковая панель, которая перекрывает основной контент */
            .sidebar.expanded {
                width: 100%;
                position: absolute;
                right: 0;
                top: 0;
                height: 100%;
                background-color: rgba(144, 238, 144, 0.95); /* Более плотный фон при расширении */
                z-index: 10;
            }
    </style>

    <script>
        document.getElementById("toggleSidebar").addEventListener("click", function () {
            var sidebar = document.getElementById("sidebar");
            sidebar.classList.toggle("expanded");
        });
    </script>
</body>
</html>
