<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeatherForGardeners</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WeatherForGardeners.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">WeatherForGardeners</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="content-wrapper">
            <!-- Основной контент -->
            <main role="main" class="main-content">
                @RenderBody()
            </main>

            <!-- Боковая панель -->
            <aside class="sidebar" id="sidebar">
                <div class="tabs">
                    <button class="tab-button" onclick="toggleTabContent('weather')">Погода</button>
                    <div class="tab-content" id="weather-content">
                        <h3>Погода</h3>
                        @await Html.PartialAsync("_Weather")
                    </div>

                    <button class="tab-button" onclick="toggleTabContent('calendar')">Календарь</button>
                    <div class="tab-content" id="calendar-content">
                        <h3>Календарь</h3>
                        @await Html.PartialAsync("_Calendar")
                    </div>
                </div>
            </aside>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WeatherForGardeners - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <style>
        .container-fluid {
            max-width: 100%;
            padding: 0;
            margin: 0;
        }

        .content-wrapper {
            display: flex;
            width: 100%;
            transition: all 0.3s ease;
            position: relative;
        }

        .main-content {
            width: 85%;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-sizing: border-box;
            overflow-x: auto;
            transition: all 0.3s ease;
        }

        .sidebar {
            width: 15%;
            background-color: rgba(144, 238, 144, 0.3);
            padding: 10px;
            border-left: 1px solid #ccc;
            border-radius: 8px;
            box-sizing: border-box;
            position: absolute;
            right: 0;
            top: 0;
            height: 100%;
            z-index: 1;
            transition: all 0.3s ease;
        }

        /* Стиль для вкладок */
        .tabs {
            display: flex;
            flex-direction: column;
        }

        .tab-button {
            width: 100%;
            padding: 10px;
            background-color: #f0f0f0;
            border: none;
            cursor: pointer;
            text-align: left;
            margin-bottom: 5px;
        }

            .tab-button:hover {
                background-color: #e0e0e0;
            }

        /* Скрываем содержимое вкладок по умолчанию */
        .tab-content {
            overflow: hidden;
            max-height: 0;
            transition: max-height 0.5s ease, padding 0.3s ease;
            background-color: rgba(144, 238, 144, 0.1);
            margin-top: 5px;
            border-radius: 5px;
            padding: 0 10px;
        }

            /* Активный класс для видимой вкладки */
            .tab-content.active {
                max-height: 300px; /* Устанавливаем максимальную высоту для плавного раскрытия */
                padding: 10px;
            }

        /* Расширенная боковая панель */
        .sidebar.expanded {
            width: 100%;
            position: absolute;
            right: 0;
            top: 0;
            height: 100%;
            background-color: rgba(144, 238, 144, 0.95);
            z-index: 10;
        }
    </style>

    <script>
        function toggleTabContent(tabId) {
            var sidebar = document.getElementById("sidebar");
            var selectedTabContent = document.getElementById(tabId + "-content");

            // Проверяем, открыта ли панель и та же ли вкладка раскрыта
            var isActive = selectedTabContent.classList.contains("active");
            var isSidebarExpanded = sidebar.classList.contains("expanded");

            // Если вкладка уже открыта, закрываем её и скрываем панель
            if (isActive) {
                selectedTabContent.classList.remove("active");
                sidebar.classList.remove("expanded");
            } else {
                // Если панель закрыта, открываем её
                if (!isSidebarExpanded) {
                    sidebar.classList.add("expanded");
                }

                // Закрываем все вкладки и открываем только текущую
                var allTabContents = document.querySelectorAll(".tab-content");
                allTabContents.forEach(function (content) {
                    content.classList.remove("active");
                });

                selectedTabContent.classList.add("active");
            }
        }

        // Закрытие боковой панели и скрытие всех вкладок при клике вне её области
        document.addEventListener("click", function (event) {
            var sidebar = document.getElementById("sidebar");
            if (!sidebar.contains(event.target) && sidebar.classList.contains("expanded")) {
                sidebar.classList.remove("expanded");

                // Скрываем содержимое всех вкладок
                var allTabContents = document.querySelectorAll(".tab-content");
                allTabContents.forEach(function (content) {
                    content.classList.remove("active");
                });
            }
        });
    </script>
</body>
</html>
